<h2>Your Workspace</h2>
<div id='workspace-page'>

  {{! TAB WIDGET }}
  <div id='tabs' class='lt-on-blue'>

    {{! TAB LIST }}
    <ul id='project-list'>
      <li class='not-sortable'>
        <h3>Project List</h3>
      </li>

      {{#each projects}}
        <li class='project-tab' id='project-tab-{{id}}'>
          <a href='#project-{{id}}'>{{name}}</a>
        </li>
      {{/each}}

      <li id='new-project-tab' class='not-sortable ui-tabs-tab ui-state-default ui-tab ui-corner-left'>
        <button id='new-project-button' class='project-tab not-sortable'>Create new project</button>
      </li>

    </ul>

    {{! PROJECT DISPLAY AREA }}
    <div class='project-workspace project-name'>

      {{! PROJECT LOOP }}
      {{#each projects}}
        <div id='project-{{id}}' class='project-workspace'>
          <div class='flex-row'>

            <h3 class='project-name'>{{name}}</h3>

          </div>

          <div class='column-container'>

            {{! COLUMN LOOP }}
            {{#each columns}}
              <div id='column-{{id}}' class='column-wrapper br-5'>
                <h4 class='column-name'>{{name}}</h4>
                <ul class='column'>

                  {{! CARD LOOP }}
                  {{#each cards}}
                    <li class='card'>
                      <div id='card-{{id}}' class='card-toggle'>
                        <h5 class='card-name'>{{name}}</h5>

                        <div class='card-body'>
                          <p class='card-text'>{{text}}</p>
                          <button id='card-button-{{id}}' class='edit-card-button'>Edit Card</button>
                        </div>
                      </div>
                    </li>
                  {{/each}}

                </ul>
                <button id='{{id}}' class='add-card-button not-sortable'>Add Card</button>
              </div>
            {{/each}}

            {{! add column button }}
            <div class='column-wrapper new-column-column'>
              <button id='column-project-{{id}}' class='new-column-button'>Add Column</button>
            </div>

          </div>
        </div>
      {{/each}}
    </div>
  </div>

  {{! TRASH DROP }}
  <div class='trash-drop'>
    <h4 class=''>
      Drop Project, Column, Or Card Here To Delete
    </h4>
  </div>

</div>

<script src='https://code.jquery.com/jquery-3.6.0.js'></script>
<script src='https://code.jquery.com/ui/1.13.0/jquery-ui.js'></script>

<script type='text/javascript' src='/javascript/logout.js'></script>
<script type='text/javascript' src='/javascript/column.js'></script>
<script type='text/javascript' src='/javascript/project.js'></script>
<script type='text/javascript' src='/javascript/card.js'></script>
<script type='text/javascript' src='/javascript/setup.js'></script>